<div class = "row">
  <div class ="span1 well box">
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
        <p class="vote"><i class="icon-arrow-up"></i></p>
      <% end %>
    <% end %>
    <span class="vote" id="post_<%=post.id%>_votes"><%= post.total_votes %> votes</span>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post', remote: true do %>
        <p class="vote"><i class="icon-arrow-down"></i></p>
      <% end %>
    <% end %>

  </div>

  <div class = "span9 well box">
    <p><%= render post.categories %></p>
    <h4><%= link_to post.title, url_fix(post.url) %></h4>
    <p><%= post.description%></br></p>
    <p>
      <span class="quiet"><em> Created by <%= link_to post.user.username, user_path(post.user) %> on <%= date_fix(post.created_at) %></em></span></br>
      <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </br>
    </p>
     <%= link_to("View post", post_path(post)) %>
  </div>
</div>