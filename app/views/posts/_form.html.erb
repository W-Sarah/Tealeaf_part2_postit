<% if @post.errors.messages.any? %>
<div class="alert alert-error">
  There are the following errors:</br>
    <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
    </ul>
<% end %>
</div>


<p>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %></br>
  <%= f.label :url, 'URL' %>
  <%= f.text_field :url %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </br></br>
  <%= f.submit value: 'Submit your post' , class: 'btn btn-primary' %>
<% end %>
</p>
